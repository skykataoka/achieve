<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>お知らせ</h2>
    <ul>
      <% @notifications.each do |notification| %>
      <hr>
        <li>
          <span>
            <% if notification.read == true %>
            <p>既読</p>
            <% else %>
            <p style="color:red">未読</p>
            <% end %>

          </span>
          <p><%= notification.comment.user.try(:name) %>さんが</p>
          <p>あなたのブログ
          "<%= link_to "#{notification.comment.blog.title}", blog_path(notification.comment.blog, notification_id: notification.id) %>"</p>
          <p>にコメントしました。</p>
          <p style="color:gray"><%= posted_time(notification.created_at) %>前</p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
