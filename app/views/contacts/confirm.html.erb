<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h1>問い合わせ内容を確認する</h1>

<%= form_for(@contact) do |f| %>

     <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
     <% end %>

    <%= f.hidden_field :title %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>
    <br>
    <p>タイトル:<%= @contact.title %></p>
    <p>email:<%= @contact.email %></p>
    <p>本文:<%= @contact.content %></p>
    <%= f.submit :"送信する", class: 'btn btn-primary btn-block' %>

<% end %>



<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>
    <%= f.submit :"前画面に戻る" ,name:'back', class: 'btn btn-default btn-block' %>

<% end %>


<%= link_to "ブログに戻る" ,blogs_path, class: 'btn btn-default btn-block' %>

  </div>
</div>
