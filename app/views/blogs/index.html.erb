<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <p><%= notice %></p>

    <h1>ブログ一覧</h1>
    <%= link_to "ブログを作成する", new_blog_path, class:'btn btn-default' %>
    <% @blogs.each do |blog| %>
      <div class="row">
        <%= profile_img(blog.user) if profile_img(blog.user) %>
        <!-- # ブログのタイトルにlink_toでリンクを設定します。 -->
        <%= link_to blog_path(blog) do %>
          <h4><strong><%= blog.title %></strong></h4>
        <% end %>
        <p>作成者:<%= blog.user.email %></p>
        <p>本文:<%= blog.content %></p>
        <%= link_to "編集する", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除する", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn-danger' %>
      </div>
    <% end %>

  </div>
  <div id="page-top-btn" class="page-top-btn">
        <p><a class="move-page-top" id="move-page-top">▲</a></p>
  </div>

</div>

<br>


<%= link_to "問い合わせをする", new_contact_path %>
